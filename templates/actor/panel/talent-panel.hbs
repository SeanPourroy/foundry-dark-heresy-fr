<div class="dh-panel dh-grid-col-2 dh-grid-row-1">
    <h1 class="dh-panel__header">Talents</h1>
    <div class="dh-table--border dh-talenttable--border">
        <div class="table-row--head">
            <div class="table-cell--span2">Name</div>
            <div class="table-cell">Tier</div>
            <div class="table-cell--last">
                <label class="dh-control-button item-create" data-type="talent">
                    <span class="dh-control-button__span material-icons">{{defaultVal icon 'add_circle'}}</span>
                </label>
            </div>
        </div>
        {{#each actor.items as | item |}}
            {{#if item.isTalent}}
                <div class="table-row">
                    <div class="table-cell--settingstoggle">
                        <label class="dh-control-button item-edit" data-item-id="{{item.id}}">
                            <span class="dh-control-button__span material-icons">{{defaultVal icon 'settings'}}</span>
                        </label>
                    </div>
                    <div class="table-cell">
                        {{> systems/dark-heresy-2nd/templates/actor/partial/trait-toggle.hbs toggle=(concat 'description_' item.id) text=item.name}}
                    </div>
                    <div class="table-cell">
                        <span>{{item.system.tier}}</span>
                    </div>
                    <div class="table-cell--last">
                        <label class="dh-control-button item-vocalize" data-item-id="{{item.id}}">
                            <span class="dh-control-button__span material-icons">{{defaultVal icon 'record_voice_over'}}</span>
                        </label>
                        <label class="dh-control-button item-delete" data-item-id="{{item.id}}">
                            <span class="dh-control-button__span material-icons">{{defaultVal icon 'delete'}}</span>
                        </label>
                    </div>
                    <div class="table-cell--description description_{{item.id}}" {{hideIfNot
                        (isExpanded (concat 'description_' item.id ))}}>
                        <span>{{item.system.benefit}}</span>
                    </div>
                </div>
            {{/if}}
        {{/each}}
    </div>
</div>
