<div class="dh-panel dh-grid-col-4">
    <h1 class="dh-panel__header">Weapons</h1>
    <div class="dh-table--border dh-weapontable--border">
        <div class="table-row--head">
            <div class="table-cell--span2">Name</div>
            <div class="table-cell">Class</div>
            <div class="table-cell">Type</div>
            <div class="table-cell">Equipped</div>
            <div class="table-cell--last">
                <label class="dh-control-button item-create" data-type="weapon">
                    <span class="dh-control-button__span material-icons">{{defaultVal icon 'add_circle'}}</span>
                </label>
            </div>
        </div>
        {{#each actor.items as | item |}}
            {{#if item.isWeapon}}
                <div class="table-row item-drag" data-item-id="{{item.id}}" data-item-type="weapon">
                    <div class="table-cell--settingstoggle">
                        <label class="dh-control-button item-edit" data-item-id="{{item.id}}">
                            <span class="dh-control-button__span material-icons">{{defaultVal icon 'settings'}}</span>
                        </label>
                    </div>
                    <div class="table-cell--left">
                        {{> systems/dark-heresy-2nd/templates/actor/partial/trait-toggle.hbs toggle=(concat 'description_' item.id) text=item.name}}
                    </div>
                    <div class="table-cell">
                        <span class="display">{{item.system.class}}</span>
                    </div>
                    <div class="table-cell">
                        <span class="display">{{item.system.type}}</span>
                    </div>
                    <div class="table-cell">
                        <span class="display">{{item.system.equipped}}</span>
                    </div>
                    <div class="table-cell--last">
                        <label class="dh-control-button item-roll" data-item-id="{{item.id}}">
                            <span class="dh-control-button__span material-icons">{{defaultVal icon 'casino'}}</span>
                        </label>
                        <label class="dh-control-button item-damage" data-item-id="{{item.id}}">
                            <span class="dh-control-button__span material-icons">{{defaultVal icon 'bolt'}}</span>
                        </label>
                        <label class="dh-control-button item-delete" data-item-id="{{item.id}}">
                            <span class="dh-control-button__span material-icons">{{defaultVal icon 'delete'}}</span>
                        </label>
                    </div>
                    <div class="table-cell--description description_{{item.id}}" {{hideIfNot
                        (isExpanded (concat 'description_' item.id ))}}>
                        <div class="dh-settings">
                            <div class="dh-field__wrapper">
                                <span class="dh-field__header">Damage</span>
                                <span class="dh-field__span">{{item.system.damage}}</span>
                            </div>
                            <div class="dh-field__wrapper">
                                <span class="dh-field__header">Type</span>
                                <span class="dh-field__span">{{item.system.damageType}}</span>
                            </div>
                            <div class="dh-field__wrapper">
                                <span class="dh-field__header">Pen</span>
                                <span class="dh-field__span">{{item.system.penetration}}</span>
                            </div>
                        </div>
                    </div>
                </div>
            {{/if}}
        {{/each}}
    </div>
</div>
